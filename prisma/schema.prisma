generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model FoodAnalysis {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  analysis  String
  createdAt DateTime @default(now())
  userId    String
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  role      String
  content   String
  createdAt DateTime @default(now())
  userId    String
}

model Recipe {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ingredients String[]
  instructions String
  prepTime    Int
  cookTime    Int
  servings    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId String
}